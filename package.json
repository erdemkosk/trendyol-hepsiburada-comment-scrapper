{
  "name": "express_boilerplate",
  "version": "1.0.0",
  "description": "Node js based express api template.",
  "author": "Mustafa Erdem Köşk <erdemkosk@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erdemkosk/express_boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/erdemkosk/express_boilerplate/issues"
  },
  "main": "index.js",
  "engines": {
    "node": "14.15.0",
    "npm": "6.14.8"
  },
  "scripts": {
    "start": "node .",
    "start:dev": "nodemon .",
    "test": "NODE_ENV=test jest --runInBand",
    "test:watch": "jest --watch",
    "lint": "eslint --ignore-pattern 'node_modules/**' 'api/**/*.{js,jsx,ts,tsx}'",
    "lint-fix": "npm run lint -- --fix",
    "docker-build": "docker build -t express_boilerplate .",
    "docker-run": "docker run --env-file ./.env -it --rm -p 3000:3000 express_boilerplate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint-fix",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.13.8",
    "amqplib": "^0.8.0",
    "api-express-exporter": "^1.0.0",
    "aws-sdk": "^2.948.0",
    "axios": "^0.21.1",
    "babel-eslint": "^10.1.0",
    "body-parser": "^1.19.0",
    "celebrate": "^12.1.2",
    "cors": "^2.8.5",
    "dateformat": "^3.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-better-ratelimit": "^1.1.2",
    "express-mongo-sanitize": "^2.0.0",
    "express-swagger-generator": "^1.1.17",
    "express-winston": "^4.0.3",
    "helmet": "^3.23.3",
    "husky": "^4.2.5",
    "ip": "^1.1.5",
    "joi-objectid": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "moment-timezone": "^0.5.31",
    "mongoose": "^5.12.7",
    "newrelic": "^8.6.0",
    "node-mocks-http": "^1.9.0",
    "node-redis-warlock": "^1.0.2",
    "redis": "^3.0.2",
    "redis-mock": "^0.56.3",
    "webhook-discord": "^3.7.7",
    "winston": "^3.3.3",
    "winston-cloudwatch": "^3.0.0",
    "winston-transport-sentry-node": "^0.6.0"
  },
  "devDependencies": {
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "faker": "^5.1.0",
    "jest": "^26.6.1",
    "lint-staged": "8.1.5",
    "mongo-seeding": "^3.4.1",
    "mongodb": "^3.6.2",
    "mongodb-memory-server": "^6.9.2",
    "mongodb-uri": "^0.9.7",
    "rosie": "^2.0.1",
    "supertest": "^5.0.0"
  }
}
